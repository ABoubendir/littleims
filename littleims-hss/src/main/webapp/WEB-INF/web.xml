<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app 
   xmlns="http://java.sun.com/xml/ns/javaee" 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
   version="2.5"> 

  <display-name>Test WebApp</display-name>
  
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
      file:${jetty.home}/etc/hss.xml
    </param-value>
  </context-param>
    
  <filter>
    <filter-name>osiv</filter-name> 
    <filter-class>org.springframework.orm.hibernate3.support.OpenSessionInViewFilter</filter-class>
  </filter>
  
  <filter>
    <filter-name>wicket</filter-name>
    <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
    <init-param>
      <param-name>applicationFactoryClassName</param-name>
      <param-value>org.apache.wicket.spring.SpringWebApplicationFactory</param-value>
    </init-param>
  </filter>
  
  <filter-mapping>
    <filter-name>osiv</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>wicket</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
      
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  
  <servlet>
    <servlet-name>cipango-console</servlet-name>
    <servlet-class>org.cipango.ims.hss.web.ConsoleProxyServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>SvgServlet</servlet-name>
    <servlet-class>org.cipango.ims.hss.web.SvgServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>SharedIfcServlet</servlet-name>
    <servlet-class>org.cipango.ims.hss.web.SharedIfcServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  
  <servlet-mapping>
    <servlet-name>cipango-console</servlet-name>
    <url-pattern>*.vm</url-pattern>
  </servlet-mapping>
  

  <servlet-mapping>
    <servlet-name>SvgServlet</servlet-name>
    <url-pattern>/svg/subscription.svg</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
    <servlet-name>SharedIfcServlet</servlet-name>
    <url-pattern>/sharedIFCs.xml</url-pattern>
  </servlet-mapping>
  
</web-app>