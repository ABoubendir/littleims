<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.cipango.littleims</groupId>
    <artifactId>littleims-project</artifactId>
    <version>1.0-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <artifactId>littleims-package</artifactId>
  <packaging>pom</packaging>
  <name>littleIMS :: Package</name>

  <profiles>
    <profile>
      <id>copy-jetty</id>
      <activation>
        <property>
          <name>jetty</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>clean</id>
                <phase>clean</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <tasks>
                    <delete includeemptydirs="true">
                      <fileset dir="${littleims.home}" includes="littleims.properties"/>
                    </delete>
                  </tasks>
                </configuration>
              </execution>
              <execution>
                <phase>install</phase>
                <configuration>
                  <tasks>
                    <!--  S-CSCF -->
                    <copy todir="${scscf.home}">
                       <fileset dir="${jetty.home}" includes="start.jar,lib/,resources/,bin/,sipapps,etc/sipdefault.xml,etc/webdefault.xml"/>
                     </copy>
                    
                    <!--  P-CSCF -->
                    <copy todir="${pcscf.home}">
                       <fileset dir="${jetty.home}" includes="start.jar,lib/,resources/,bin/,sipapps,etc/sipdefault.xml,etc/webdefault.xml"/>
                     </copy>

                    
                    <!--  I-CSCF -->
                    <copy todir="${icscf.home}">
                       <fileset dir="${jetty.home}" includes="start.jar,lib/,resources/,bin/,sipapps,etc/sipdefault.xml,etc/webdefault.xml"/>
                     </copy>
                    
                    <!--  HSS -->
                    <copy todir="${hss.home}">
                       <fileset dir="${jetty.home}" includes="start.jar,lib/,resources/,bin/,sipapps,etc/sipdefault.xml,etc/webdefault.xml"/>
                     </copy>
                     
                     <copy file="../../littleims.properties" todir="${littleims.home}"/>
                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles> 

</project>
