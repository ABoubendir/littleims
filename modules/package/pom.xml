<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.cipango.littleims</groupId>
    <artifactId>littleims-project</artifactId>
    <version>1.0-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <artifactId>littleims-package</artifactId>
  <packaging>pom</packaging>
  <name>littleIMS :: Package</name>

  <profiles>
    <profile>
      <id>copy-jetty</id>
      <activation>
        <property>
          <name>jetty</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>clean</id>
                <phase>clean</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <tasks>
                    <delete includeemptydirs="true">
                      <fileset dir="${littleims.home}" includes="littleims.properties"/>
                      <fileset dir="${scscf.home}"/>
                      <fileset dir="${pcscf.home}"/>
                      <fileset dir="${icscf.home}"/>
                      <fileset dir="${hss.home}" excludes="db/"/>
                    </delete>
                  </tasks>
                </configuration>
              </execution>
              <execution>
                <phase>install</phase>
                <configuration>
                  <tasks>
                    <!--  S-CSCF -->
                    <copy todir="${scscf.home}">
                       <fileset dir="${jetty.home}" includes="start.jar,lib/,resources/,sipapps,etc/sipdefault.xml,etc/webdefault.xml"/>
                     </copy>
                     <copy file="${jetty.home}/bin/cipango.sh" toFile="${scscf.home}/bin/scscf.sh"/>
                     <replace file="${scscf.home}/bin/scscf.sh" token="cipango.xml" value="cipango-scscf.xml"/>
                     <replace file="${scscf.home}/bin/scscf.sh" token="cipango.pid" value="littleims-scscf.pid"/>
                     <replace file="${scscf.home}/bin/scscf.sh" token="CIPANGO_HOME" value="SCSCF_HOME"/>
                     <chmod file="${scscf.home}/bin/scscf.sh" perm="ugo+rx"/>
                    
                    <!--  P-CSCF -->
                    <copy todir="${pcscf.home}">
                       <fileset dir="${jetty.home}" includes="start.jar,lib/,resources/,sipapps,etc/sipdefault.xml,etc/webdefault.xml"/>
                     </copy>
                     <copy file="${jetty.home}/bin/cipango.sh" toFile="${pcscf.home}/bin/pcscf.sh"/>
                     <replace file="${pcscf.home}/bin/pcscf.sh" token="cipango.xml" value="cipango-pcscf.xml"/>
                     <replace file="${pcscf.home}/bin/pcscf.sh" token="cipango.pid" value="littleims-pcscf.pid"/>
                     <replace file="${pcscf.home}/bin/pcscf.sh" token="CIPANGO_HOME" value="PCSCF_HOME"/>
                     <chmod file="${pcscf.home}/bin/pcscf.sh" perm="ugo+rx"/>
                    
                    <!--  I-CSCF -->
                    <copy todir="${icscf.home}">
                       <fileset dir="${jetty.home}" includes="start.jar,lib/,resources/,sipapps,etc/sipdefault.xml,etc/webdefault.xml"/>
                     </copy>
                     <copy file="${jetty.home}/bin/cipango.sh" toFile="${icscf.home}/bin/icscf.sh"/>
                     <replace file="${icscf.home}/bin/icscf.sh" token="cipango.xml" value="cipango-icscf.xml"/>
                     <replace file="${icscf.home}/bin/icscf.sh" token="cipango.pid" value="littleims-icscf.pid"/>
                     <replace file="${icscf.home}/bin/icscf.sh" token="CIPANGO_HOME" value="ICSCF_HOME"/>
                     <chmod file="${icscf.home}/bin/icscf.sh" perm="ugo+rx"/>
                    
                    <!--  HSS -->
                    <copy todir="${hss.home}">
                       <fileset dir="${jetty.home}" includes="start.jar,lib/,resources/,sipapps,etc/sipdefault.xml,etc/webdefault.xml"/>
                     </copy>
                     <copy file="${jetty.home}/bin/cipango.sh" toFile="${hss.home}/bin/hss.sh"/>
                     <replace file="${hss.home}/bin/hss.sh" token="cipango.xml" value="cipango-hss.xml"/>
                     <replace file="${hss.home}/bin/hss.sh" token="cipango.pid" value="littleims-hss.pid"/>
                     <replace file="${hss.home}/bin/hss.sh" token="CIPANGO_HOME" value="HSS_HOME"/>
                     <chmod file="${hss.home}/bin/hss.sh" perm="ugo+rx"/>
                     
                     <copy file="../../littleims.properties" todir="${littleims.home}"/>
                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles> 

</project>
